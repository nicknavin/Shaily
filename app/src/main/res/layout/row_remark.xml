<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"

    android:layout_marginTop="5dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="false"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/value5"
        android:layout_marginTop="@dimen/value5"
        android:orientation="vertical">

        <com.app.session.customview.CustomTextView
            android:id="@+id/txtRemark_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:singleLine="true"
            android:text="Navin Nimade"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:visibility="gone"
            app:edittextfont="OpenSans-Bold.ttf" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="9">

                <com.app.session.customview.CustomTextView
                    android:id="@+id/txtRemark"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginBottom="@dimen/value5"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:ellipsize="end"
                    android:maxLines="4"


                    android:text="fasdfsdafsdafdsafsadfs"
                    android:textColor="@color/bg_btn"
                    android:textSize="14sp"
                    android:visibility="gone"
                    app:edittextfont="OpenSans-Regular.ttf" />


                <LinearLayout
                    android:id="@+id/lay_audio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/img_audio_play"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/audio_selector"
                        android:src="@mipmap/play_icon" />

                    <SeekBar
                        android:id="@+id/audio_seekBar"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:max="10"
                        android:progressDrawable="@drawable/seekbar_line"

                        android:thumbTint="@color/bg_btn" />

                    <com.app.session.customview.CustomTextView
                        android:id="@+id/txt_progress"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/color_audio"
                        android:textSize="12sp" />

                </LinearLayout>

            </RelativeLayout>
            <!-- android:thumb="@drawable/seekbar_thumb"-->

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/imgRemove"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:src="@mipmap/remove" />
            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginBottom="@dimen/value5"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginTop="5dp"
            android:background="@color/bg_btn"></View>

        <com.app.session.customview.CustomTextView
            android:id="@+id/txtRemark_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="@dimen/value5"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="@dimen/value5"
            android:singleLine="true"
            android:text="sdfsafasdfdsafdsafdsaf"
            android:textColor="@color/bg_btn"
            android:textSize="12sp"
            app:edittextfont="OpenSans-Regular.ttf" />

    </LinearLayout>
    <!--</android.support.v7.widget.CardView>-->
</androidx.cardview.widget.CardView>
