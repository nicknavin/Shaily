<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="8dp"
    android:layout_marginRight="8dp"
    android:id="@+id/layGroup">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

<RelativeLayout
    android:id="@+id/layCircle"
    android:layout_width="58dp"
    android:layout_height="58dp"
    >
    <com.app.session.customview.CircleImageView
        android:id="@+id/imgGroup"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center|left"
        app:border_color="@color/white"
        app:border_width="1.5dp"

        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/demo_icon"/>


</RelativeLayout>

        <RelativeLayout
            android:id="@+id/layCircleAdd"
            android:layout_width="58dp"
            android:layout_height="58dp"

            android:background="@drawable/circle_snap_add">
            <com.app.session.customview.CircleImageView
                android:id="@+id/imgAddGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center|left"
                app:border_color="@color/white"
                app:border_width="1.5dp"

                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/mores"/>


        </RelativeLayout>


    </RelativeLayout>
    <com.app.session.customview.CustomTextView
        android:id="@+id/txtGroupName"
        android:layout_width="70dp"
        android:layout_height="wrap_content"

        android:maxLines="1"
        android:layout_below="@+id/imgGroup"
        android:ellipsize="end"
        android:layout_gravity="center|left"
        android:gravity="center"
        android:textSize="12sp"
        app:edittextfont="Roboto_Regular.ttf"

        />

</LinearLayout>
