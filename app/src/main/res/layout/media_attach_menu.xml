<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/cardView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:visibility="invisible"
    android:background="@android:color/white"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    >

    <LinearLayout

        android:id="@id/menu_attachments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:gravity="center_horizontal"
        android:orientation="vertical">

        <!--row 1 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="12dp">

                <ImageButton
                    android:id="@id/menu_attachment_camera"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@mipmap/attach_camera"
                    android:contentDescription="@string/content_description" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/menu_camera" />
            </LinearLayout>




            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="12dp">

                <ImageButton
                    android:id="@id/menu_attachment_gallery"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@mipmap/attach_gallery"
                    android:contentDescription="@string/content_description" />

                <com.app.session.customview.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:edittextfont="Roboto-Bold.ttf"
                    android:text="@string/menu_gallery" />
            </LinearLayout>
            <LinearLayout

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"

                android:padding="12dp">

                <RelativeLayout
                    android:id="@+id/layPickVideo"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/circular_two_color">

                    <ImageView
                        android:id="@id/menu_attachment_video"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/ic_video" />
                </RelativeLayout>

                <com.app.session.customview.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:edittextfont="Roboto-Bold.ttf"
                    android:text="@string/menu_video" />
            </LinearLayout>
        </LinearLayout>


        <!--row 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="12dp">

                <ImageButton
                    android:id="@id/menu_attachment_audio"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@mipmap/attach_audio"
                    android:contentDescription="@string/content_description" />

                <com.app.session.customview.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:edittextfont="Roboto-Bold.ttf"
                    android:text="@string/menu_audio" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="12dp">

                <ImageButton
                    android:id="@id/menu_attachment_document"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@mipmap/attach_document"
                    android:contentDescription="@string/content_description" />

                <com.app.session.customview.CustomTextView
                    app:edittextfont="Roboto-Bold.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/menu_document" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="12dp">

                <ImageButton
                    android:id="@id/menu_attachment_youtube"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@mipmap/youtube_menu"
                    android:contentDescription="@string/content_description" />

                <com.app.session.customview.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:edittextfont="Roboto-Bold.ttf"
                    android:layout_marginTop="8dp"
                    android:text="@string/youtube" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
