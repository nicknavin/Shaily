<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="?android:attr/spinnerDropDownItemStyle">
        <LinearLayout
            android:id="@+id/layItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
android:padding="@dimen/value5"
            >

            <ImageView
                android:id="@+id/img_flag"
                android:layout_width="30dp"
                android:layout_height="30dp"

                android:layout_gravity="center"
                android:src="@mipmap/country_icon"/>

            <com.app.session.customview.CustomTextView
                android:id="@+id/text_view_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/select"
                android:textColor="@color/txt_app"
                android:maxLines="1"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:textSize="18sp"
                app:edittextfont="Roboto-Regular.ttf"
             />
        </LinearLayout>




</RelativeLayout>
