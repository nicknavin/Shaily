<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:src="@mipmap/key_icon" />

            <com.app.session.customview.CustomTextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="@dimen/value5"
                android:gravity="center"
                android:text="@string/reset_txt"
                android:textColor="#727272"
                android:textSize="18sp"
                android:textStyle="bold"
                app:edittextfont="OpenSans-Bold.ttf"
                app:edittextfontHint="OpenSans-Bold.ttf" />

            <com.app.session.customview.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="@string/reset_pwd"
                android:textColor="#727272"
                android:textSize="15sp"
                app:edittextfont="OpenSans-Regular.ttf"
                app:edittextfontHint="OpenSans-Regular.ttf" />

            <com.app.session.customview.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="@string/hint_new_pwd"
                android:textColor="#727272"
                android:textSize="15sp"
                app:edittextfont="OpenSans-Regular.ttf"
                app:edittextfontHint="OpenSans-Regular.ttf" />

            <com.app.session.customview.CustomEditText
                android:id="@+id/edt_new_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/line_gray"
                android:inputType="textPassword"
                android:paddingBottom="@dimen/value5"
                android:paddingTop="@dimen/value5"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="15sp"
                app:edittextfont="OpenSans-Regular.ttf"
                app:edittextfontHint="OpenSans-Regular.ttf" />

            <com.app.session.customview.CustomTextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="@string/hint_cnfm_pwd"
                android:textColor="#727272"
                android:textSize="15sp"
                app:edittextfont="OpenSans-Regular.ttf"
                app:edittextfontHint="OpenSans-Regular.ttf" />

            <com.app.session.customview.CustomEditText
                android:id="@+id/edt_cnfm_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/line_gray"
                android:inputType="textPassword"
                android:paddingBottom="@dimen/value5"
                android:paddingTop="@dimen/value5"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="15sp"
                app:edittextfont="OpenSans-Regular.ttf"
                app:edittextfontHint="OpenSans-Regular.ttf" />

            <com.app.session.customview.CustomTextView
android:id="@+id/btn_done"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/box_gray"
                android:gravity="center"
                style="@style/ButtonRippleStyle1"
                android:paddingBottom="@dimen/value10"
                android:paddingTop="@dimen/value10"
                android:text="@string/done"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:edittextfont="OpenSans-Regular.ttf"
                app:edittextfontHint="OpenSans-Regular.ttf" />

            <com.app.session.customview.CustomTextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/box_black"
                android:gravity="center"
                android:paddingBottom="@dimen/value10"
                android:paddingTop="@dimen/value10"
                android:text="@string/btn_back"
                android:textColor="#EEEEEE"
                android:textSize="18sp"
                android:textStyle="bold"
                app:edittextfont="OpenSans-Regular.ttf"
                app:edittextfontHint="OpenSans-Regular.ttf" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
