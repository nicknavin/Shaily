<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="@dimen/value10">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.app.session.customview.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/value10"
        android:minLines="1"
        android:maxLines="1"
        android:layout_marginRight="@dimen/value10"
        android:layout_toLeftOf="@+id/img_attachment"

        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/msg_story"
        android:padding="@dimen/value10"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:edittextfont="OpenSans-Bold.ttf" />
    <ImageView
        android:id="@+id/img_attachment"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@mipmap/attachment_icon"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"></ImageView>
</RelativeLayout>

    <com.app.session.customview.CustomEditText
        android:id="@+id/edt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/value10"
        android:minLines="1"
        android:maxLines="1"
        android:layout_marginRight="@dimen/value10"
        android:layout_marginTop="20dp"
        android:background="@drawable/edittxt_bg"
        android:hint="@string/hint_title_story"
        android:padding="@dimen/value10"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:edittextfont="OpenSans-Regular.ttf" />

    <ImageView
        android:id="@+id/imgStory"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:adjustViewBounds="true"
        android:visibility="gone"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/ballu"/>

    <com.app.session.customview.CustomEditText
        android:id="@+id/edt_story"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="@dimen/value10"
        android:layout_marginRight="@dimen/value10"
        android:layout_marginTop="20dp"
        android:background="@drawable/edittxt_bg"
        android:gravity="top"
        android:maxLines="6"
        android:minLines="5"
        android:padding="@dimen/value10"

        android:textColor="@color/black"
        android:textColorHint="@color/grey"
        android:textSize="15sp"
        app:edittextfont="OpenSans-Regular.ttf" />

    <com.app.session.customview.CustomTextView
        android:id="@+id/btn_Send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/value10"
        android:layout_marginTop="@dimen/value10"
        android:background="@drawable/btn_gray"
        android:padding="@dimen/value10"
        android:text="@string/send_story"
        android:inputType="textMultiLine"
        android:scrollbars="vertical"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_marginBottom="@dimen/value10"
        app:edittextfont="OpenSans-Regular.ttf" />

</LinearLayout>
