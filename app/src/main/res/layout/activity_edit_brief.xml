<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.EditBriefActivity">

    <include
        layout="@layout/toolbar_brief"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


    <com.app.session.customview.CustomEditText
        android:id="@+id/edtBriefTitle"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="sdfsdafasdfdsaf"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/box_gray_border"
        android:hint="@string/title"
        android:maxLength="30"
        android:maxLines="1"
        android:minLines="1"
        android:padding="@dimen/value10"
        android:paddingBottom="5dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="14sp"
        app:edittextfont="OpenSans-Regular.ttf"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_actionbar" />

    <com.app.session.customview.CustomEditText
        android:id="@+id/edtBriefCv"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/box_gray_border"
        android:gravity="top"
        android:maxLength="1000"
        android:minLines="5"
        android:padding="@dimen/value10"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:edittextfont="OpenSans-Regular.ttf"
        app:layout_constraintTop_toBottomOf="@+id/edtBriefTitle" />


</androidx.constraintlayout.widget.ConstraintLayout>