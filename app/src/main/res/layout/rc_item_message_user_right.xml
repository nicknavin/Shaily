<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true"
    android:layout_alignParentRight="true"
    android:layout_gravity="right"
    android:paddingTop="2dp"
    android:paddingBottom="2dp"
    android:paddingLeft="5dp">


    <RelativeLayout
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_width="350dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content" >
        <com.app.session.customview.CustomTextView
            android:id="@+id/textMSgTime"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="15:50"
            android:textSize="14sp"
            android:padding="5dp"
            android:textColor="#767676"

            android:layout_toLeftOf="@+id/lay"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/lay"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/background_right"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imgChat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/demo7"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:scaleType="fitXY"
                />
            <com.app.session.customview.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sdfdsfffffffffffffffffffffffffffffffffffffffffffffffffsdf"
                app:layout_constraintTop_toBottomOf="@+id/imgChat"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_below="@+id/imgChat"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:id="@+id/textContentUser"
                android:textSize="16sp"
                android:textColor="#ffffff"
                android:padding="10dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>



    </RelativeLayout>

</RelativeLayout>