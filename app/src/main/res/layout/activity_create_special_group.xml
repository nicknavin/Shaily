<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.app.session.activity.CreateSpecialGroupActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_default"></include>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="10dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"

        app:cardCornerRadius="5dp"
        app:cardUseCompatPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.app.session.customview.CircleImageView
                android:id="@+id/imgProfile"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop"
                android:src="@mipmap/profile_pic"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                app:border_color="@color/black"
                app:border_width="1dp" />

            <com.app.session.customview.CustomTextView
                android:id="@+id/txt_img_updated"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgProfile"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/edit_change_image"
                android:textColor="@color/orange_theme"
                android:textSize="14sp"
                app:edittextfont="OpenSans-Regular.ttf" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="10dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"

        app:cardCornerRadius="5dp"
        app:cardUseCompatPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">


            <com.app.session.customview.CustomEditText
                android:id="@+id/edt_group_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/edit_round"
                android:drawablePadding="10dp"
                android:hint="@string/group_name"
                android:maxLines="1"
                android:minLines="1"
                android:paddingBottom="5dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="15sp"
                app:edittextfont="OpenSans-Regular.ttf" />

            <com.app.session.customview.CustomEditText
                android:id="@+id/edt_group_purpose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/edit_round"
                android:hint="@string/group_purpose"
                android:drawablePadding="10dp"
                android:maxLines="1"
                android:minLines="1"
                android:paddingBottom="5dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="15sp"
                app:edittextfont="OpenSans-Regular.ttf" />

            <com.app.session.customview.CustomEditText
                android:id="@+id/edt_group_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/edit_round"
                android:hint="@string/group_price"
                android:drawablePadding="10dp"
                android:maxLines="1"
                android:minLines="1"
                android:paddingBottom="5dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="15sp"
                app:edittextfont="OpenSans-Regular.ttf" />

            <com.app.session.customview.CustomTextView
                android:id="@+id/txt_create_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/orange_btn_bg"
                android:layout_gravity="right"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:padding="10dp"

                android:text="@string/create_group"
                android:textColor="@color/orange_theme"
                android:textSize="14sp"
                app:edittextfont="OpenSans-Bold.ttf" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
