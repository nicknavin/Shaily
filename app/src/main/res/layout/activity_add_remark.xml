<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app.session.activity.AddRemarkActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_remark" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <com.app.session.customview.CustomEditText
            android:id="@+id/edt_remark"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_below="@id/toolbar"

            android:layout_marginTop="20dp"
            android:background="@drawable/rectangle_box_transparent"
            android:gravity="top"
            android:hint="@string/hint_remark"
            android:maxLines="7"
            android:minLines="7"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="14sp"
            app:edittextfont="OpenSans-Regular.ttf"
            />

        <com.app.session.customview.CustomEditText
            android:id="@+id/edt_date"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/edit_round"
            android:drawableLeft="@mipmap/cland"
            android:drawablePadding="10dp"
            android:hint="@string/hint_date"
            android:visibility="gone"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="15sp"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            app:edittextfont="OpenSans-Regular.ttf"
            app:edittextfontHint="OpenSans-Regular.ttf" />

        <com.app.session.customview.CustomEditText
            android:id="@+id/edt_time"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edit_round"
            android:drawableLeft="@mipmap/clock_icon"
            android:drawablePadding="10dp"
            android:hint="@string/hint_time"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:visibility="gone"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="15sp"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            app:edittextfont="OpenSans-Regular.ttf"
            app:edittextfontHint="OpenSans-Regular.ttf" />
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <com.app.session.customview.CustomTextView
            android:id="@+id/txtSubmit"
            style="@style/ButtonRippleStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/orange_btn_bg"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/submit"
            android:textColor="@color/orange_theme"
            android:textSize="16sp"
            app:edittextfont="OpenSans-Bold.ttf" />


    </RelativeLayout>
</RelativeLayout>
