<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar_actionbar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/toolbars"
    android:minHeight="?attr/actionBarSize"
    app:contentInsetEnd="0dp"
    app:contentInsetStart="0dp"
    android:layout_margin="2dp"
    android:elevation="5dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    android:layout_alignParentTop="true"
    android:background="#FAFAFA"
    app:layout_scrollFlags="scroll|enterAlways"
    app:titleTextColor="@android:color/white">
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"

            android:src="@mipmap/ic_back_arrow"/>



        <com.app.session.customview.CustomTextView
            android:id="@+id/txtExplore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imgBack"
           android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"

            android:text="Nicks"
            android:paddingBottom="@dimen/value5"
            android:paddingTop="@dimen/value5"
            android:textColor="@color/txt_app"
            android:textSize="18sp"

            android:layout_gravity="center"
            android:gravity="center"
            app:edittextfont="Segoe_UI_Bold.ttf" />

<ImageView
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:src="@mipmap/chat_bubble"
    android:layout_marginRight="10dp"
    android:layout_alignParentRight="true"
    android:visibility="gone"
    android:id="@+id/imgChat"></ImageView>

    </RelativeLayout>

</androidx.appcompat.widget.Toolbar>
