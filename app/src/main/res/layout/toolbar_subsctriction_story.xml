<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar_actionbar"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:minHeight="?attr/actionBarSize"
    app:contentInsetEnd="0dp"
    app:contentInsetStart="0dp"
    android:layout_margin="2dp"
    android:elevation="5dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    android:layout_alignParentTop="true"
    android:background="#F7F9F8"
    app:layout_scrollFlags="scroll|enterAlways"
    app:titleTextColor="@android:color/white">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/value10"
            android:src="@mipmap/ic_left_arrow"
            android:layout_alignParentLeft="true"
            />
        <ImageView
            android:id="@+id/imgVideo"
            android:layout_width="30dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/value10"
            android:layout_centerHorizontal="true"
android:visibility="gone"
            android:src="@mipmap/ic_video_upload"
            android:layout_toLeftOf="@+id/imgMick"
            />
        <ImageView
            android:id="@+id/imgMick"
            android:layout_width="25dp"
            android:layout_height="40dp"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/value10"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/ic_microphone"
            android:layout_toLeftOf="@+id/imgAttach"
            />

        <ImageView
            android:id="@+id/imgAttach"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
        android:padding="10dp"
            android:layout_centerHorizontal="true"
            android:tint="#616464"
            android:src="@mipmap/paperclip"
            android:layout_toLeftOf="@+id/imgSend"
            />
        <ImageView
            android:id="@+id/imgSend"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:tint="#616464"
            android:layout_centerHorizontal="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/send_story"
            />


    </RelativeLayout>

</androidx.appcompat.widget.Toolbar>
