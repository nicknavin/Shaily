<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greyish">

    <include
        android:id="@+id/toolbar"
        android:visibility="gone"
        layout="@layout/toolbar_default"></include>

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"

                app:cardCornerRadius="5dp"
                app:cardUseCompatPadding="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.app.session.customview.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="10dp"
                        android:singleLine="true"
                        android:text="@string/brief_edit_image"
                        android:textColor="@color/black"

                        android:textSize="14sp"
                        app:edittextfont="OpenSans-Bold.ttf" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1.5dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/grey" />

                    <RelativeLayout
                        android:id="@+id/relative_layout_profile_pic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="20dp"
                        android:visibility="gone">

                        <com.app.session.customview.CircleImageView
                            android:id="@+id/imgProfile"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_centerInParent="true"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/profile_large"
                            app:border_color="@color/black"
                            app:border_width="1dp" />

                        <ImageView
                            android:id="@+id/imgEdit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignRight="@+id/imgProfile"
                            android:src="@mipmap/edit_icon"
                            android:visibility="gone" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/layCompany"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <ImageView
                            android:id="@+id/imgProfile_company"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_centerInParent="true"
                            android:background="@color/white"

                            android:src="@mipmap/profile_large" />

                        <ImageView
                            android:id="@+id/coverimgEdit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignRight="@+id/imgProfile_company"
                            android:src="@mipmap/edit_icon"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <com.app.session.customview.CustomTextView
                        android:id="@+id/txt_img_updated"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imgProfile"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="@string/edit_change_image"
                        android:textColor="@color/orange_theme"

                        android:textSize="14sp"
                        app:edittextfont="OpenSans-Regular.ttf"></com.app.session.customview.CustomTextView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"

                app:cardCornerRadius="5dp"
                app:cardUseCompatPadding="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:orientation="vertical">

                    <com.app.session.customview.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:layout_marginTop="10dp"
                        android:hint="@string/brief_edit_image"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="14sp"
                        app:edittextfont="OpenSans-Bold.ttf" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1.5dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/grey" />

                    <CheckBox
                        android:id="@+id/checkEdit_Profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginRight="10dp"
                        android:button="@mipmap/edit_icon"
                        android:padding="10dp" />

                    <com.app.session.customview.CustomEditText
                        android:id="@+id/edt_fullname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/edit_round"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:drawableLeft="@mipmap/user"
                        android:drawablePadding="10dp"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:hint="@string/email_name"
                        android:maxLines="1"
                        android:minLines="1"
                        android:paddingBottom="5dp"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="15sp"
                        app:edittextfont="OpenSans-Regular.ttf" />

                    <com.app.session.customview.CustomTextView
                        android:id="@+id/edt_phone_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/edit_round"
                        android:drawableLeft="@mipmap/mobile_icon"
                        android:drawablePadding="10dp"
                        android:maxLines="1"
                        android:minLines="1"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:paddingBottom="5dp"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="15sp"
                        app:edittextfont="OpenSans-Regular.ttf" />

                    <com.app.session.customview.CustomTextView
                        android:id="@+id/edt_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/edit_round"
                        android:drawableLeft="@mipmap/email_icon"
                        android:drawablePadding="10dp"
                        android:maxLines="1"
                        android:minLines="1"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:paddingBottom="5dp"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="15sp"
                        app:edittextfont="OpenSans-Regular.ttf" />

                    <com.app.session.customview.CustomTextView
                        android:id="@+id/edt_selectCountry"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/edit_round"
                        android:drawableLeft="@mipmap/country_icon"
                        android:drawablePadding="10dp"
                        android:hint="@string/prof_country"
                        android:maxLines="1"
                        android:minLines="1"
                        android:paddingBottom="5dp"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="14sp"
                        app:edittextfont="OpenSans-Regular.ttf" />

                    <com.app.session.customview.CustomTextView
                        android:id="@+id/txtUpdate_profile"

                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"

                        android:gravity="center"
                        android:padding="10dp"
                        android:text="@string/update"
                        android:textColor="@color/orange_theme"
                        android:textSize="14sp"
                        android:visibility="gone"
                        app:edittextfont="OpenSans-Bold.ttf" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"

                app:cardCornerRadius="5dp"
                app:cardUseCompatPadding="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.app.session.customview.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:visibility="gone"
                        android:text="@string/your_lang_pref"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        app:edittextfont="OpenSans-Bold.ttf" />
                    <View
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="1.5dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:background="@color/grey" />

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <com.app.session.customview.CustomEditText
                            android:id="@+id/edt_pref_lang"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="25dp"
                            android:visibility="gone"
                            android:layout_marginTop="10dp"
                            android:layout_weight="9"
                            android:background="@drawable/edit_round"
                            android:clickable="false"
                            android:cursorVisible="false"
                            android:drawablePadding="10dp"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:hint="@string/select_lang_pref"
                            android:maxLines="1"
                            android:minLines="1"
                            android:paddingBottom="5dp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:textSize="14sp"
                            app:edittextfont="OpenSans-Regular.ttf" />

                        <CheckBox
                            android:id="@+id/checkEdit_preflang"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:button="@mipmap/edit_icon"
                            android:padding="10dp"
                            android:visibility="gone"/>

                    </LinearLayout>

                    <com.app.session.customview.CustomTextView
                        android:id="@+id/txtUpdate_pref_lang"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:layout_marginTop="15dp"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="@string/update"
                        android:textColor="@color/orange_theme"
                        android:textSize="14sp"
                        android:visibility="gone"
                        app:edittextfont="OpenSans-Bold.ttf" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1.5dp"
                        android:layout_marginTop="20dp"
                        android:visibility="gone"
                        android:background="@color/grey" />

                    <com.app.session.customview.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:layout_marginTop="10dp"
                        android:hint="@string/lang_speak"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="14sp"
                        app:edittextfont="OpenSans-Bold.ttf" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1.5dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/grey" />

                    <CheckBox
                        android:id="@+id/checkEdit_lang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginRight="10dp"
                        android:button="@mipmap/edit_icon"
                        android:padding="10dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerView_lang"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp" />

                    <LinearLayout
                        android:id="@+id/layAdd_lang"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|left"
                                android:padding="10dp"

                                android:src="@mipmap/plus_icon" />

                            <com.app.session.customview.CustomTextView
                                android:id="@+id/edt_selectLang"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@drawable/line_primary"
                                android:gravity="left"
                                android:text="@string/add_lang"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                app:edittextfont="OpenSans-Bold.ttf" />

                        </LinearLayout>

                        <com.app.session.customview.CustomTextView
                            android:id="@+id/txtUpdate_lang"

                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="25dp"
                            android:layout_marginRight="25dp"
                            android:layout_marginTop="15dp"

                            android:gravity="center"
                            android:padding="10dp"
                            android:text="@string/update"
                            android:textColor="@color/orange_theme"
                            android:textSize="14sp"
                            app:edittextfont="OpenSans-Bold.ttf" />
                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"

                app:cardCornerRadius="5dp"
                app:cardUseCompatPadding="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.app.session.customview.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:layout_marginTop="10dp"
                        android:singleLine="true"
                        android:text="@string/profession"
                        android:textColor="@color/black"

                        android:textSize="14sp"
                        app:edittextfont="OpenSans-Bold.ttf" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1.5dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/grey" />

                    <CheckBox
                        android:id="@+id/checkEdit_profession"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_gravity="right"
                        android:layout_marginRight="10dp"
                        android:button="@mipmap/edit_icon"
                        android:padding="10dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:orientation="vertical">


                        <com.app.session.customview.CustomTextView
                            android:id="@+id/edt_selectCat"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/edit_round"
                            android:drawableLeft="@mipmap/grid"
                            android:drawablePadding="10dp"
                            android:hint="@string/prof_catg"

                            android:maxLines="1"
                            android:minLines="1"

                            android:paddingBottom="5dp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:textSize="14sp"
                            app:edittextfont="OpenSans-Regular.ttf" />


                        <com.app.session.customview.CustomTextView
                            android:id="@+id/edt_selectSubCat"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:layout_marginTop="20dp"
                            android:layout_weight="3"
                            android:background="@drawable/edit_round"
                            android:drawableLeft="@mipmap/grid"
                            android:drawablePadding="10dp"
                            android:hint="@string/prof_subCateg"
                            android:maxLines="1"
                            android:minLines="1"
                            android:paddingBottom="5dp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:textSize="14sp"
                            app:edittextfont="OpenSans-Regular.ttf" />

                        <LinearLayout
                            android:id="@+id/layProfession"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"

                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:src="@mipmap/plus_icon" />

                                <com.app.session.customview.CustomTextView
                                    android:id="@+id/txt_add_specialization"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="10dp"
                                    android:background="@drawable/line_primary"
                                    android:text="@string/add_specialization"
                                    android:textColor="@color/black"
                                    android:textColorHint="@color/black"
                                    android:textColorLink="@color/bg_btn"
                                    android:textSize="14sp"
                                    app:edittextfont="OpenSans-Bold.ttf" />
                            </LinearLayout>

                            <com.app.session.customview.CustomTextView
                                android:id="@+id/txtUpdate_subCatg"

                                android:layout_width="110dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:layout_marginBottom="10dp"

                                android:layout_marginTop="15dp"

                                android:gravity="center"
                                android:padding="10dp"
                                android:text="@string/update"
                                android:textColor="@color/orange_theme"
                                android:textSize="14sp"
                                app:edittextfont="OpenSans-Bold.ttf" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"

                app:cardCornerRadius="5dp"
                app:cardUseCompatPadding="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.app.session.customview.CustomTextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="30dp"
                        android:singleLine="true"
                        android:text="@string/brief_cv_edit"
                        android:textColor="@color/black"

                        android:textSize="14sp"
                        app:edittextfont="OpenSans-Bold.ttf" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_above="@+id/lay_footer"
                        android:layout_below="@+id/toolbar"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:layout_marginTop="20dp"/>

                    <com.app.session.customview.CustomTextView
                        android:id="@+id/txt_Update_briefcv"
                        style="@style/ButtonRippleStyle"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginBottom="15dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/orange_btn_bg"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="@string/update"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:visibility="gone"
                        app:edittextfont="OpenSans-Bold.ttf" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_address"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="5dp"
                app:cardUseCompatPadding="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <com.app.session.customview.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|center"
                            android:padding="10dp"
                            android:text="@string/address_edit"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:textSize="14sp"
                            app:edittextfont="OpenSans-Bold.ttf" />

                        <ImageView
                            android:id="@+id/imgAdd_Address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_gravity="right|center"
                            android:padding="10dp"
                            android:src="@mipmap/plus_icon" />

                    </RelativeLayout>

                    <View

                        android:layout_width="match_parent"
                        android:layout_height="1.5dp"
                        android:background="@color/grey" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerView_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"

                        android:layout_marginTop="10dp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_bank"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="5dp"
                app:cardUseCompatPadding="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.app.session.customview.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="30dp"
                        android:hint="@string/edit_bankdetail"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="14sp"
                        app:edittextfont="OpenSans-Bold.ttf" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1.5dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/grey" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:orientation="vertical">

                        <CheckBox
                            android:id="@+id/checkEdit_bank"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:layout_gravity="right"
                            android:layout_marginRight="10dp"
                            android:button="@mipmap/edit_icon"
                            android:padding="10dp" />

                        <com.app.session.customview.CustomEditText
                            android:id="@+id/edt_Bankname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_round"
                            android:clickable="false"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:hint="@string/bank_name"
                            android:maxLines="1"
                            android:minLines="1"
                            android:padding="10dp"
                            android:paddingLeft="20dp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:textSize="15sp"
                            app:edittextfont="OpenSans-Regular.ttf" />

                        <com.app.session.customview.CustomEditText
                            android:id="@+id/edt_BranchName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_round"
                            android:clickable="false"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:hint="@string/bank_branch"
                            android:maxLines="1"
                            android:minLines="1"
                            android:padding="10dp"
                            android:paddingLeft="20dp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:textSize="15sp"
                            app:edittextfont="OpenSans-Regular.ttf" />

                        <com.app.session.customview.CustomEditText
                            android:id="@+id/edt_AccountNo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_round"
                            android:clickable="false"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:hint="@string/bank_account"
                            android:maxLines="1"
                            android:minLines="1"
                            android:padding="10dp"
                            android:paddingLeft="20dp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:textSize="15sp"
                            app:edittextfont="OpenSans-Regular.ttf" />

                        <com.app.session.customview.CustomEditText
                            android:id="@+id/edt_BankIbn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_round"
                            android:clickable="false"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:hint="@string/bank_iban"
                            android:maxLines="1"
                            android:minLines="1"
                            android:padding="10dp"
                            android:paddingLeft="20dp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:textSize="15sp"
                            app:edittextfont="OpenSans-Regular.ttf" />

                        <com.app.session.customview.CustomEditText
                            android:id="@+id/edt_swifcode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_round"
                            android:clickable="false"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:hint="@string/swif_code"
                            android:maxLines="1"
                            android:layout_marginBottom="20dp"
                            android:minLines="1"
                            android:padding="10dp"
                            android:paddingBottom="10dp"
                            android:paddingLeft="20dp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:textSize="15sp"
                            app:edittextfont="OpenSans-Regular.ttf" />

                        <com.app.session.customview.CustomEditText
                            android:id="@+id/edt_branch_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_round"
                            android:clickable="false"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:hint="@string/branch_address"
                            android:maxLines="1"
                            android:minLines="1"
                            android:padding="10dp"
                            android:paddingLeft="20dp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:textSize="15sp"
                            android:visibility="gone"
                            app:edittextfont="OpenSans-Regular.ttf" />

                        <com.app.session.customview.CustomTextView
                            android:id="@+id/txt_bank_Update"

                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginBottom="15dp"
                            android:layout_marginTop="15dp"

                            android:gravity="center"
                            android:padding="10dp"
                            android:text="@string/update"
                            android:textColor="@color/orange_theme"
                            android:textSize="14sp"
                            android:visibility="gone"
                            app:edittextfont="OpenSans-Bold.ttf" />

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>


</RelativeLayout>
